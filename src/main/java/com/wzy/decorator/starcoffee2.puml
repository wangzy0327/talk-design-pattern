@startuml
'https://plantuml.com/class-diagram

abstract class Drink{
    String description;
    int milk;
    int soy;
    int chocolate;
    getDescription()
    cost()
    hasMilk()
    setMilk()
    hasSoy()
    setSoy()
    hasChocolate()
    setChocolate()
}
class Decaf extends Drink{
    cost()
}
class ShortBlack extends Drink{
    cost()
}
class LongBlack extends Drink{
    cost()
}
class Espresso extends Drink{
    cost()
}



@enduml